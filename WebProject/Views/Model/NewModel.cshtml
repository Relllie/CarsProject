@model WebProject.ViewModels.NewModel

<form asp-action="NewModel" asp-controller="Model" asp-anti-forgery="true" enctype="multipart/form-data">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <h1 class="h3 mb-3 font-weight-normal">Добавление новой модели</h1>
        <div>
            <label asp-for="Name" class="col-form-label-lg">Введите название модели</label><br />
            <input type="text" asp-for="Name" class="form-control-lg" value="@Model.Name"/>
            <span asp-validation-for="Name" />
        </div>
        <div>
            <label asp-for="BrandName" class="col-form-label-lg">Выберите бренд</label><br />
            <select asp-for="BrandName">
                @{
                    foreach (var brand in ViewBag.BrandList)
                    {
                        <option value="@brand.Name">@brand.Name</option>
                    }
                }
            </select>
        </div>
        <div>
            <label asp-for="Active" class="col-form-label-lg">Является ли модель активным</label><br />
            <input type="checkbox" asp-for="Active" class="form-control-lg" />
            <span asp-validation-for="Active" />
        </div>
        <div>
            <input type="submit" value="Добавить" class="btn btn-lg btn-primary" />
        </div>
    </div>
</form>