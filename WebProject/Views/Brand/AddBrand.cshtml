@model WebProject.ViewModels.NewBrand

<form asp-action="AddBrand" asp-controller="Brand" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <h1 class="h3 mb-3 font-weight-normal">Добавление нового бренда</h1>
        <div>
            <label asp-for="Name" class="col-form-label-lg">Введите название бренда</label><br />
            <input type="text" asp-for="Name" class="form-control-lg" />
            <span asp-validation-for="Name" />
        </div>
        <div>
            <label asp-for="Active" class="col-form-label-lg">Является ли бренд активным</label><br />
            <input type="checkbox" asp-for="Active" class="form-control-lg" />
            <span asp-validation-for="Active" />
        </div>
        <div>
            <input type="submit" value="Добавить" class="btn btn-lg btn-primary" />
        </div>
    </div>
</form>