@model WebProject.ViewModels.ChangeBrand

<form asp-action="ChangeBrand" asp-controller="Brand" asp-anti-forgery="true" enctype="multipart/form-data">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    @Html.HiddenFor(id => Model.Id)
    <div>
        <h1 class="h3 mb-3 font-weight-normal">Изменение бренда</h1>
        <div>
            <label asp-for="Name" class="col-form-label-lg">Введите новое название бренда</label><br />
            <input type="text" asp-for="Name" class="form-control-lg" value="@Model.Name"/>
            <span asp-validation-for="Name" />
        </div>
        <div>
            <label asp-for="Active" class="col-form-label-lg">Является ли бренд активным</label><br />
            <input type="checkbox" asp-for="Active" class="form-control-lg"/>
            <span asp-validation-for="Active" />
        </div>
        <div>
            <input type="submit" value="Добавить" class="btn btn-lg btn-primary" as/>
        </div>
    </div>
</form>